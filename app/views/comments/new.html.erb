<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Please comment</h1>
        <%= form_with model: [@topic, @comment], url: {action: "create"} do |f| %>
           <!-- topicモデルにcommentモデルを帰属 -->
          <div class="form-group">
            <%= f.text_area :body, class: 'form-control', placeholder: 'Please write freely...' %>
          </div>

          <% if logged_in? %>
           <div>
            <%= f.submit 'Comment', class: 'btn btn-black btn-block' %>
           </div>
          <% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>
